<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.directwebremoting.org/schema/spring-dwr
	http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

	<!-- Defines the dwrController. During production, set the debug property 
		to false -->
	<dwr:controller id="dwrController" debug="true" />

	<!-- 用户登录services开始 -->
	<bean class="gambler.examples.webapp2.dwr.DwrDemoService" id="dwrDemoService">
		<dwr:remote javascript="demoService">
			<dwr:include method="hello" />
		</dwr:remote>
	</bean>

	<!--beans -->
	<dwr:configuration>
		<dwr:convert type="bean" class="gambler.examples.webapp2.dwr.DemoMessage"/>
	</dwr:configuration>
</beans>