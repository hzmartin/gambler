    <properties>
        <spring.version>3.1.4.RELEASE</spring.version>
        <gb.switch.enableCreateSuper>false</gb.switch.enableCreateSuper>
        <gb.switch.enableAuthentication>true</gb.switch.enableAuthentication>
    </properties>
    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>env</name>
                    <value>dev</value>
                </property>
            </activation>
            <properties>
                <gb.msmode>DEV</gb.msmode>
                <gb.log4j.path>logs</gb.log4j.path>
                <gb.log4j.level>DEBUG</gb.log4j.level>
                <gb.log4j.appender>CONSOLE</gb.log4j.appender>
                <gb.datasource.url>jdbc:derby:${project.parent.basedir}/example-derby</gb.datasource.url>
                <gb.datasource.userName></gb.datasource.userName>
                <gb.datasource.password></gb.datasource.password>
                <gb.datasource.driverClassName>org.apache.derby.jdbc.EmbeddedDriver</gb.datasource.driverClassName>
