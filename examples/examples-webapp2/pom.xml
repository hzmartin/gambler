                <gb.datasource.initialSize>5</gb.datasource.initialSize>
                <gb.datasource.maxActive>60</gb.datasource.maxActive>
                <gb.datasource.maxIdle>5</gb.datasource.maxIdle>
                <gb.datasource.removeAbandoned>true</gb.datasource.removeAbandoned>
                <gb.datasource.removeAbandonedTimeout>60</gb.datasource.removeAbandonedTimeout>
                <gb.datasource.logAbandoned>true</gb.datasource.logAbandoned>
                <gb.datasource.maxWait>60</gb.datasource.maxWait>
                <gb.datasource.minPoolSize>5</gb.datasource.minPoolSize>
                <gb.datasource.maxPoolSize>20</gb.datasource.maxPoolSize>
                <gb.datasource.acquireIncrement>5</gb.datasource.acquireIncrement>
                <gb.datasource.acquireRetryAttempts>1</gb.datasource.acquireRetryAttempts>
                <gb.datasource.idleConnectionTestPeriod>600</gb.datasource.idleConnectionTestPeriod>
                <gb.datasource.checkoutTimeout>300000</gb.datasource.checkoutTimeout>
                <gb.datasource.maxConnectionAge>1800</gb.datasource.maxConnectionAge>
                <gb.datasource.maxIdleTime>1000</gb.datasource.maxIdleTime>
                <gb.datasource.maxStatements>0</gb.datasource.maxStatements>
                <gb.switch.enableCreateSuper>true</gb.switch.enableCreateSuper>
                <gb.switch.enableAuthentication>false</gb.switch.enableAuthentication>
