<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- update the table name to any you like -->
  <class name="gambler.commons.advmap.AdvancedEntry" table="system_configuration">
    <composite-id class="gambler.commons.advmap.AdvancedKey" name="id">
      <key-property column="namespace" length="40" name="namespace" type="string"/>
      <key-property column="key_name" length="40" name="key" type="string"/>
      <key-property name="order" type="integer">
          <column name="order_num" default="1" />
      </key-property>
      <key-property column="locale" length="6" name="locale" type="locale"/>
    </composite-id>
    <property column="value" insert="true" length="200" name="value" not-null="false" type="string" update="true"/>
  </class>
</hibernate-mapping>
